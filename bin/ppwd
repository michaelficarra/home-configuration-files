#!/bin/bash
shorten=false
if [ $# -gt 0 ]; then
	shorten=true
	pwd_length=$1
	etc='â”ˆ'
	etcSize=($(echo "$etc" | wc -m)-1)
fi

DIR=`/bin/pwd`

echo $DIR | grep "^$HOME" >> /dev/null

if [ $? -eq 0 ]
then
	CURRDIR=`echo $DIR | awk -F$HOME '{print $2}'`
	newPWD="~$CURRDIR"

	$shorten && if [ $(echo -n $newPWD | wc -m) -gt $pwd_length ]
	then
		newPWD="~/$etc$(echo -n $PWD | sed -e "s/.*\(.\{$(($pwd_length-$etcSize+2))\}\)/\1/")"
	fi
elif [ "$DIR" = "$HOME" ]
then
	newPWD="~"
elif $shorten && [ $(echo -n $PWD | wc -c | tr -d " ") -gt $pwd_length ]
then
	newPWD="/$etc$(echo -n $PWD | sed -e "s/.*\(.\{$(($pwd_length-$etcSize+1))\}\)/\1/")"
else
	newPWD="$(echo -n $PWD)"
fi

echo $newPWD
